<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_footer_space">

        <com.gatheringhallstudios.mhworlddatabase.components.DetailHeaderCell
            android:id="@+id/armor_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:iconSrc="@drawable/ic_question_mark"
            tools:titleText="Azure Rathalos" />

        <LinearLayout
            android:id="@+id/armor_data_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/status_layout"
            app:layout_constraintTop_toBottomOf="@+id/armor_header"
            app:layout_constraintWidth_percent=".5">

            <com.gatheringhallstudios.mhworlddatabase.components.IconLabelTextCell
                android:id="@+id/defense_cell"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:iconSrc="@drawable/ic_ui_defense"
                app:layout_constraintRight_toRightOf="parent"
                app:numStars="1" />

            <com.gatheringhallstudios.mhworlddatabase.components.IconLabelTextCell
                android:id="@+id/fire_star_cell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconSrc="@drawable/ic_element_fire"
                app:layout_constraintRight_toRightOf="parent"
                app:numStars="1" />

            <com.gatheringhallstudios.mhworlddatabase.components.IconLabelTextCell
                android:id="@+id/ice_star_cell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconSrc="@drawable/ic_element_ice"
                app:layout_constraintRight_toRightOf="parent"
                app:numStars="2" />

            <com.gatheringhallstudios.mhworlddatabase.components.IconLabelTextCell
                android:id="@+id/dragon_star_cell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconSrc="@drawable/ic_element_dragon"
                app:layout_constraintRight_toRightOf="parent"
                app:numStars="2" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/armor_data_layout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@id/armor_data_layout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/armor_header">

            <LinearLayout
                android:id="@+id/slot_section"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@id/icon_slots"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/icon_slots">

                <ImageView
                    android:id="@+id/slots_icon"
                    style="@style/IconMedium"
                    android:layout_width="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:src="@drawable/ic_ui_slots"/>

                <ImageView
                    android:id="@+id/slot1"
                    style="@style/IconSmall"
                    android:layout_width="@dimen/image_size_medium"
                    android:layout_height="@dimen/image_size_medium"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_ui_slot_none" />

                <ImageView
                    android:id="@+id/slot2"
                    style="@style/IconSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_ui_slot_none" />

                <ImageView
                    android:id="@+id/slot3"
                    style="@style/IconSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_ui_slot_none" />
            </LinearLayout>

            <com.gatheringhallstudios.mhworlddatabase.components.IconLabelTextCell
                android:id="@+id/water_star_cell"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:iconSrc="@drawable/ic_element_water"
                app:layout_constraintRight_toRightOf="parent"
                app:numStars="1" />

            <com.gatheringhallstudios.mhworlddatabase.components.IconLabelTextCell
                android:id="@+id/lightning_star_cell"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:iconSrc="@drawable/ic_element_thunder"
                app:layout_constraintRight_toRightOf="parent"
                app:numStars="3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/armor_skill_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/armor_data_layout"
            >

            <com.gatheringhallstudios.mhworlddatabase.components.SectionHeaderCell
                android:id="@+id/armor_skill_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                app:labelText="@string/decorations_skill_information"/>

            <LinearLayout
                android:id="@+id/armor_skill_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/armor_set_bonus_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/armor_skill_section">

            <com.gatheringhallstudios.mhworlddatabase.components.SectionHeaderCell
                android:id="@+id/armor_set_bonus_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="@string/armor_detail_set_bonus"
                />

            <LinearLayout
                android:id="@+id/armor_set_bonus_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/armor_components_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/armor_set_bonus_section">

            <com.gatheringhallstudios.mhworlddatabase.components.SectionHeaderCell
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="@string/armor_detail_tab_components"
                />

            <LinearLayout
                android:id="@+id/armor_components_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</ScrollView>