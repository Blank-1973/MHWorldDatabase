<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/monster_icon"
        style="@style/ImageXLarge"
        android:src="@drawable/question_mark_grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/monster_name"
        style="@style/TextDisplay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/monster_icon"
        app:layout_constraintTop_toBottomOf="@id/monster_icon"
        tools:text="Azure Rathalos" />

    <TextView
        android:id="@+id/monster_description"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/md_margin_content"
        android:layout_marginRight="@dimen/md_margin_content"
        android:layout_marginTop="@dimen/default_padding_margin_small"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/monster_name"
        tools:text="An azure-colored subspecies of Rathalos. More mobile than their standard cousins, they locate prey from the air and quickly swoop in for the kill." />

    <FrameLayout
        android:id="@+id/divider_1"
        style="@style/HorizontalDivider"
        app:layout_constraintTop_toBottomOf="@id/monster_description" />

    <LinearLayout
        android:id="@+id/element_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/status_layout"
        app:layout_constraintTop_toBottomOf="@id/divider_1">

        <com.gatheringhallstudios.mhworlddatabase.common.components.IconStarView
            android:id="@+id/fire_star_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconSrc="@drawable/question_mark_grey"
            app:layout_constraintRight_toRightOf="parent"
            app:numStars="1" />

        <com.gatheringhallstudios.mhworlddatabase.common.components.IconStarView
            android:id="@+id/water_star_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconSrc="@drawable/question_mark_grey"
            app:layout_constraintRight_toRightOf="parent"
            app:numStars="1" />

        <com.gatheringhallstudios.mhworlddatabase.common.components.IconStarView
            android:id="@+id/lightning_star_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconSrc="@drawable/question_mark_grey"
            app:layout_constraintRight_toRightOf="parent"
            app:numStars="3" />

        <com.gatheringhallstudios.mhworlddatabase.common.components.IconStarView
            android:id="@+id/ice_star_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconSrc="@drawable/question_mark_grey"
            app:layout_constraintRight_toRightOf="parent"
            app:numStars="2" />

        <com.gatheringhallstudios.mhworlddatabase.common.components.IconStarView
            android:id="@+id/dragon_star_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconSrc="@drawable/question_mark_grey"
            app:layout_constraintRight_toRightOf="parent"
            app:numStars="2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/status_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@id/element_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_1">

        <com.gatheringhallstudios.mhworlddatabase.common.components.IconStarView
            android:id="@+id/poison_star_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconSrc="@drawable/question_mark_grey"
            app:layout_constraintRight_toRightOf="parent"
            app:numStars="2" />

        <com.gatheringhallstudios.mhworlddatabase.common.components.IconStarView
            android:id="@+id/sleep_star_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconSrc="@drawable/question_mark_grey"
            app:layout_constraintRight_toRightOf="parent"
            app:numStars="2" />

        <com.gatheringhallstudios.mhworlddatabase.common.components.IconStarView
            android:id="@+id/paralysis_star_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconSrc="@drawable/question_mark_grey"
            app:layout_constraintRight_toRightOf="parent"
            app:numStars="1" />

        <com.gatheringhallstudios.mhworlddatabase.common.components.IconStarView
            android:id="@+id/blast_star_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconSrc="@drawable/question_mark_grey"
            app:layout_constraintRight_toRightOf="parent"
            app:numStars="1" />

        <com.gatheringhallstudios.mhworlddatabase.common.components.IconStarView
            android:id="@+id/stun_star_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconSrc="@drawable/question_mark_grey"
            app:layout_constraintRight_toRightOf="parent"
            app:numStars="1" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>