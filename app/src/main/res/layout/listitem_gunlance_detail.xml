<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:divider="@drawable/divider_stroke"
    android:orientation="vertical"
    android:showDividers="middle">

    <LinearLayout
        style="@style/EquipmentRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            style="@style/IconXSmall"
            android:layout_marginStart="@dimen/margin_large"
            android:src="@drawable/ic_ui_whetstone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextSubHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_large"
                android:text="@string/weapon_sharpness" />

            <TextView
                style="@style/TextBodyMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weapon_handicraft" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:gravity="end"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/sharpness_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sharpness_label"
                    style="@style/TextSubHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    tools:text="+0" />

                <com.ghstudios.android.ui.general.SharpnessView
                    android:id="@+id/sharpness_value"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/row_height_small"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:layout_weight="1"
                    tools:blue="30"
                    tools:green="40"
                    tools:orange="80"
                    tools:red="100"
                    tools:white="50"
                    tools:yellow="50" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sharpness_container1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sharpness_label1"
                    style="@style/TextSubHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    tools:text="+0" />

                <com.ghstudios.android.ui.general.SharpnessView
                    android:id="@+id/sharpness_value1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/row_height_small"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:layout_weight="1"
                    tools:blue="30"
                    tools:green="40"
                    tools:orange="80"
                    tools:red="100"
                    tools:white="50"
                    tools:yellow="50" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sharpness_container2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sharpness_label2"
                    style="@style/TextSubHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    tools:text="+0" />

                <com.ghstudios.android.ui.general.SharpnessView
                    android:id="@+id/sharpness_value2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/row_height_small"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:layout_weight="1"
                    tools:blue="30"
                    tools:green="40"
                    tools:orange="80"
                    tools:red="100"
                    tools:white="50"
                    tools:yellow="50" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sharpness_container3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sharpness_label3"
                    style="@style/TextSubHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    tools:text="+0" />

                <com.ghstudios.android.ui.general.SharpnessView
                    android:id="@+id/sharpness_value3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/row_height_small"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:layout_weight="1"
                    tools:blue="30"
                    tools:green="40"
                    tools:orange="80"
                    tools:red="100"
                    tools:white="50"
                    tools:yellow="50" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sharpness_container4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sharpness_label4"
                    style="@style/TextSubHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    tools:text="+0" />

                <com.ghstudios.android.ui.general.SharpnessView
                    android:id="@+id/sharpness_value4"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/row_height_small"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:layout_weight="1"
                    tools:blue="30"
                    tools:green="40"
                    tools:orange="80"
                    tools:red="100"
                    tools:white="50"
                    tools:yellow="50" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sharpness_container5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sharpness_label5"
                    style="@style/TextSubHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    tools:text="+0" />

                <com.ghstudios.android.ui.general.SharpnessView
                    android:id="@+id/sharpness_value5"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/row_height_small"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:layout_weight="1"
                    tools:blue="30"
                    tools:green="40"
                    tools:orange="80"
                    tools:red="100"
                    tools:white="50"
                    tools:yellow="50" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/EquipmentRow"
        android:layout_width="match_parent">

        <ImageView
            style="@style/IconXSmall"
            android:layout_marginStart="@dimen/margin_large"
            android:src="@drawable/ic_ui_element" />

        <TextView
            style="@style/TextSubHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            android:text="@string/weapon_gunlance_shelling" />

        <LinearLayout
            android:id="@+id/shelling_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/margin_large"
            android:gravity="center_vertical|end">

            <TextView
                android:id="@+id/shelling_type"
                style="@style/TextSubHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_large"
                android:gravity="end"
                tools:text="Thunder" />

            <TextView
                android:id="@+id/shelling_level_value"
                style="@style/TextSubHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingLeft="@dimen/margin_medium"
                tools:text="150" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>


