<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_margin="@dimen/margin_medium"
    android:orientation="vertical">

    <LinearLayout
        android:id="@id/card_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <ImageView
                android:id="@+id/equipment_icon"
                style="@style/IconMedium.Decorated"
                android:layout_marginStart="@dimen/margin_large"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_ui_armor_skill_white" />

            <!-- Main Label -->

            <TextView
                android:id="@+id/equipment_name"
                style="@style/TextBodyHigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                app:layout_constraintBottom_toTopOf="@+id/rarity_string"
                app:layout_constraintStart_toEndOf="@id/equipment_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                android:text="@string/user_equipment_set_no_equipment" />

            <TextView
                android:id="@+id/rarity_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="@dimen/margin_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/equipment_icon"
                app:layout_constraintTop_toBottomOf="@+id/equipment_name"
                tools:text="Rare 8" />

            <!-- Right Side -->

            <ImageView
                android:id="@+id/icon_defense"
                style="@style/IconXSmall"
                android:layout_marginEnd="@dimen/margin_medium"
                app:layout_constraintBottom_toTopOf="@+id/icon_slots"
                app:layout_constraintEnd_toStartOf="@id/barrier_values"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:srcCompat="@drawable/ic_ui_defense" />

            <ImageView
                android:id="@+id/icon_slots"
                style="@style/IconXSmall"
                android:layout_marginEnd="@dimen/margin_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/barrier_values"
                app:layout_constraintTop_toBottomOf="@+id/icon_defense"
                app:srcCompat="@drawable/ic_ui_slots" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="start"
                app:constraint_referenced_ids="defense_value,slot_section" />

            <TextView
                android:id="@+id/defense_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_xlarge"
                app:layout_constraintBottom_toBottomOf="@id/icon_defense"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/icon_defense"
                tools:text="68~120" />

            <LinearLayout
                android:id="@+id/slot_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@id/icon_slots"
                app:layout_constraintEnd_toStartOf="@id/card_arrow"
                app:layout_constraintTop_toTopOf="@id/icon_slots">

                <ImageView
                    android:id="@+id/slot1"
                    style="@style/IconXSmall"
                    app:srcCompat="@drawable/ic_ui_slot_none" />

                <ImageView
                    android:id="@+id/slot2"
                    style="@style/IconXSmall"
                    app:srcCompat="@drawable/ic_ui_slot_none" />

                <ImageView
                    android:id="@+id/slot3"
                    style="@style/IconXSmall"
                    app:srcCompat="@drawable/ic_ui_slot_none" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/card_arrow"
                android:layout_width="@dimen/image_size_small"
                android:layout_height="@dimen/image_size_small"
                android:layout_alignParentEnd="true"
                android:background="@null"
                android:contentDescription="Expandable Card Body"
                android:src="@drawable/ic_expand_less_animated"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/slot_section" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.gatheringhallstudios.mhworlddatabase.components.DashedDividerView
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/card_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_large">

            <com.gatheringhallstudios.mhworlddatabase.components.IconLabelTextCell
                android:id="@+id/slot1_detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_height_medium"
                app:labelText="@string/user_equipment_set_no_decoration"/>

            <com.gatheringhallstudios.mhworlddatabase.components.IconLabelTextCell
                android:id="@+id/slot2_detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_height_medium"
                app:labelText="@string/user_equipment_set_no_decoration" />

            <com.gatheringhallstudios.mhworlddatabase.components.IconLabelTextCell
                android:id="@+id/slot3_detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_height_medium"
                app:labelText="@string/user_equipment_set_no_decoration" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>