<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:clickable="false"

    android:layout_marginStart="@dimen/margin_large"
    android:layout_marginEnd="@dimen/margin_large"

    android:layout_marginTop="@dimen/margin_medium"
    android:layout_marginBottom="@dimen/margin_medium">
    <!-- Note: padding/margin above are separated as an implementation detail.
        The padding can be set to zero by code, the margin cannot.-->

    <LinearLayout
        android:id="@+id/result_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/result_icon"
            style="@style/IconMedium.Decorated"
            tools:src="@drawable/ic_question_mark"/>

        <TextView
            android:id="@+id/result_name"
            style="@style/TextBodyHigh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            tools:text="Potion" />
    </LinearLayout>

    <TextView
        android:id="@+id/yield_label"
        style="@style/TextBodyHigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="@id/result_view"
        app:layout_constraintBottom_toBottomOf="@id/result_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/item_crafting_yield" />


    <LinearLayout
        android:id="@+id/item1_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/result_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item1_name"
            style="@style/TextBodyHigh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            tools:text="Dragonbone Artifact"/>

        <ImageView
            android:id="@+id/item1_icon"
            style="@style/IconSmall.Decorated"
            android:layout_marginStart="8dp"
            tools:src="@drawable/ic_question_mark"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item2_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintTop_toBottomOf="@id/item1_view"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/item2_name"
            style="@style/TextBodyHigh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            tools:text="Dragonbone Artifact" />

        <ImageView
            android:id="@+id/item2_icon"
            style="@style/IconSmall.Decorated"
            android:layout_marginStart="8dp"
            tools:src="@drawable/ic_question_mark"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>